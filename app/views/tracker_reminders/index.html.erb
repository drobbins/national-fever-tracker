<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Tracker Reminders</h1>

    <% if @tracker_reminders.exists? %>
      <%= link_to 'New Tracker Reminder', new_tracker_reminder_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @tracker_reminders.exists? %>
    <div class="bg-white rounded shadow table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs text-gray-700">Email</th>
            <th class="p-3 uppercase text-left text-xs text-gray-700">Time to send</th>
            <th class="p-3 uppercase text-left text-xs text-gray-700 w-20">Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @tracker_reminders.each do |tracker_reminder| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100">
                      <td class="p-3"><%= tracker_reminder.email %></td>
                      <td class="p-3"><%= tracker_reminder.time_to_send %></td>
          
            <td>
              <%= link_to "View", tracker_reminder, class: "btn btn-link no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <div class="bg-white rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first Tracker Reminder</p>
        <%= link_to 'New Tracker Reminder', new_tracker_reminder_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
